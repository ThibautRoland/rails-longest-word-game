<h1>New game</h1>
<br>
<%= @letters.join(" ") %>

<form action='score' data-turbo='false' method='POST'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">What is the longest word you can find?</label>
  <br>
  <input type="text" name="word">
  <input type="submit" value='play' class='btn btn-light'>
  <%= hidden_field_tag :letters, @letters %>

</form>
